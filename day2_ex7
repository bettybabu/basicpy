#PF-Exer-7

def calculate_total_ticket_cost(no_of_adults, no_of_children):
    total_ticket_cost=0
    adult_cost=0
    child_cost=0
    #Write your logic here

    adult_cost=adult_cost+(no_of_adults*37550)

    
    child_cost=child_cost+(no_of_children*12516.66667)
     
    cost=adult_cost+child_cost
    ticket_cost=cost+(cost*.07)
    total_ticket_cost=ticket_cost-(ticket_cost*0.1)

    return total_ticket_cost


#Provide different values for no_of_adults, no_of_children and test your program
total_ticket_cost=calculate_total_ticket_cost(5,2)
print("Total Ticket Cost:",total_ticket_cost)
